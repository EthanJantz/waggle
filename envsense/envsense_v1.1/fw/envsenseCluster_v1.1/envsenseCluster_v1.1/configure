#!/bin/bash
mkdir bin 
mkdir build
ARCH=$(uname -p)
BOARD_NAME=$(cat board.info | grep TARGET)
PORT_NAME=$(cat board.info | grep PORT)

if [ "$ARCH" == "x86_64" ]
then
  echo "ARD_HOME = $WAGGLE_GIT_ROOT/resources/compilers/arduino-1.6.5-linux/arduino_64" > makefile
else
  echo "ARD_HOME = $WAGGLE_GIT_ROOT/resources/compilers/arduino-1.6.5-linux/arduino_32" > makefile
fi
echo "TARGET = ${PWD##*/}" >> makefile
if [ "${BOARD_NAME##*=}" == "envsenseV1" ]
then 
    echo "PACKAGE = arduino" >> makefile
    echo "ARCH = avr" >> makefile
    echo "BOARD = mega" >> makefile
    echo "TYPE = atmega2560" >> makefile
    echo "FLASHER_BAUD_RATE = 115200" >> makefile
    echo "PORT = ${PORT_NAME##*=}" >> makefile
fi
cat MakeFile >> makefile